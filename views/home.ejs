<%-include("partials/header.ejs") %>

<div class="homepageBackground">
    <h1>Bloggers Point</h1>
    <p>Start Sharing</p>
</div>

<section class="home-container">
    <div class="articles-container" id="articleContainer">
        <div class="article">
            <h1 class="article-heading">Secrets Of Web</h1>
            <p class="article-para">This book will uncover all the secrets of the web...</p>
            <a href="/read"><button class="read" onclick="articlePage(0)">Read</button></a>
        </div>

    
           <% for (let i = 1; i < data.length; i++) {%>
                <div class="article" id="article">
                    <h1 class="article-heading"><%= data[i].title.slice(0,20) %></h1>
                    <p class="article-para"><%= data[i].text.slice(0,50) %>....</p>
                    <a href="/read"><button class="read" onclick="articlePage(<%= i %>)">Read</button></a>
                </div>
           <% } %>

    </div>
</section>

